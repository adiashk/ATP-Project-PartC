            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Rows:" GridPane.rowIndex="1" />
            <Label text="Columns:" GridPane.rowIndex="2" />
            <TextField fx:id="txtfld_rowsNum" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField fx:id="txtfld_columnsNum" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label text="Please enter row and column:" />
            <Button fx:id="btn_generateMaze" mnemonicParsing="false" onAction="#generateMaze" prefHeight="31.0" prefWidth="198.0" text="Generate maze" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <Label text="Rows Location:" GridPane.rowIndex="4" />
            <Label text="Columns Location:" GridPane.rowIndex="5" />
            <Label fx:id="lbl_rowsNum" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <Label fx:id="lbl_columnsNum" GridPane.columnIndex="1" GridPane.rowIndex="5" />
         </children>
      </GridPane>
   </left>
