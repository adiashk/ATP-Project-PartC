<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane prefHeight="200.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.MyViewController">
   <top>
      <MenuBar prefHeight="0.0" prefWidth="389.0" BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#newGame" text="New" />
                  <MenuItem mnemonicParsing="false" text="Save" />
                  <MenuItem mnemonicParsing="false" text="Load" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Options">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#propertiesGame" text="Properties" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Exit" />
            <Menu mnemonicParsing="false" text="Help" />
            <Menu mnemonicParsing="false" text="About" />
        </menus>
      </MenuBar>
   </top>
   <left>
      <GridPane fx:id="GridPane_newMaze" alignment="TOP_CENTER" prefHeight="175.0" prefWidth="524.0" visible="false" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="10.0" prefWidth="130.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="180.0" minWidth="0.0" prefWidth="70.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Rows:" GridPane.rowIndex="1" />
            <Label text="Colomns:" GridPane.rowIndex="2" />
            <TextField fx:id="txtfld_rowsNum" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <TextField fx:id="txtfld_columnsNum" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label text="Please enter row and column:" />
            <Button mnemonicParsing="false" onAction="#generateMaze" prefHeight="31.0" prefWidth="198.0" text="Generate maze" GridPane.columnIndex="1" GridPane.rowIndex="3" />
         </children>
      </GridPane>
   </left>
</BorderPane>
